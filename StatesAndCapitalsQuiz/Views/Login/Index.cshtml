@model StatesAndCapitalsQuiz_DataAccess.Models.User

@{
    ViewBag.Title = "Login";
}

<h3>Please provide your username and password</h3>

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{

    @Html.AntiForgeryToken()


<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(a => a.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(a => a.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(a => a.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <a href="/Register/Index"><input type="button" class="btn btn-primary" value="Register" /></a>
            <input type="submit" class="btn btn-primary" value="Login" />
        </div>
    </div>

</div>
}