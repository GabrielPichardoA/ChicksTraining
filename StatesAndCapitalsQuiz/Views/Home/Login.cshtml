@model StatesAndCapitalsQuiz.Models.User

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="row">
        <h3>Please provide your username and password</h3>
    </div>
    <fieldset>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div>
                        @Html.LabelFor(a => a.UserName)
                        @Html.TextBoxFor(a => a.UserName)
                        @Html.ValidationMessageFor(a => a.UserName)
                    </div>

                </div>
                <div class="col-md-3">
                    <div>
                        @Html.LabelFor(a => a.Password)
                        @Html.PasswordFor(a => a.Password)
                        @Html.ValidationMessageFor(a => a.Password)
                    </div>
                </div>
            </div>
            <br />
            @*<div class="row">
                <div class="col-md-3">
                    <a href="/Register/Index"><input type="button" class="btn btn-primary" value="Register" /></a>
                    <input type="submit" class="btn btn-primary" value="Login" />
                </div>
            </div>*@
        </div>

    </fieldset>
}